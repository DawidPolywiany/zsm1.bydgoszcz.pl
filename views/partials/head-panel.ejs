<div class="top-menu">
    <img src="/images/bydgoszcz.png">
    <img src="/images/ukraina.png">
    <div>
        <%- svg.facebook %>
        <button onclick="toggle_menu(this)" class="menu-button">
            <div><%- svg.menu %></div>
        </button>
    </div>
</div>
<div class="bottom-menu">
    <%- svg.home %>
    <%- svg.plan %>
    <%- svg.vulcan %>
</div>
<nav id="nav_menu" class="nav-closed">
    <%- svg.exit %>
    
    <% data.nav.forEach((i) => { %>
        <% if (Array.isArray(i.links)) { %>
            <details>
                <summary><%= i.title %></summary>
                <ul>
                <% i.links.forEach((j) => { %>
                    <li><a href="<%= j.link %>"><%= j.title %></a></li>
                <% }) %>
                </ul>
            </details>
        <% } else { %>
            <a href="<%= i.links %>"><%= i.title %></a>
        <% } %>
    <% }); %>
</nav>
